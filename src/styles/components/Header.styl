#toggle:checked + menu
    background-color $background-menu
    display block
    overflow hidden
    position fixed
    left -40px
    top 0
    z-index 3
.Header
    width 100%
    position static
    z-index 1
    margin 0px
    top 0
    a
        text-decoration none
        color $text-color
        text-size-adjust 100%
    &__principal
        margin 0 0 0 0
        padding 15px 0 0 0 
        display grid
        grid-template-columns 30% 70% 
        grid-gap 5px
        align-items center 
        justify-content right 
        max-width 100%
        label
            font-size $font-size-burguer
        &__logo
            img 
                height 35px
        &__shopping_cart
            img 
                height 35px
    &__principal--title
        text-align right 
    &__menu 
        display none
        width 100%
        text-align center
        border-bottom 1px solid #c2bebe
        height 95%
        margin 60px 0 0 0
    &__menu li 
        border 1px solid $text-color
        padding 20px
        margin 0 30px 0 30px
    &__menu--dark
        display flex
        align-items center
        text-align center
        justify-content center
    &__menu--darkMode
        position: relative;
        -webkit-appearance: none;
        outline: none;
        width: 60px;
        height: 30px;
        background-color: #fff;
        border: 1px solid #D9DADC;
        border-radius: 50px;
        box-shadow: inset -20px 0 0 0 #fff;
    &__menu--darkMode:after
        content: "";
        position: absolute;
        top: 1px;
        left: 1px;
        background: transparent;
        width: 26px;
        height: 26px;
        border-radius: 50%;
        box-shadow: 2px 4px 6px rgba(0,0,0,0.2);
    &__menu--darkMode:checked 
        box-shadow: inset 30px 0 0 0 $grey-color;
        border-color: $grey-color;
    &__menu--darkMode:checked:after
        left: 20px;
        box-shadow: -2px 4px 3px rgba(0,0,0,0.05);
@media only screen and (min-width 800px) 
    .Header
        font-size $font-size-medium
        &__principal
            padding 15px 0 0 0 
            display grid
            grid-template-columns 30% 70%
            grid-gap 1px
        &__principal--title
            text-align left             
        &__principal div:nth-of-type(1) {
            order 2
        }
        &__principal div:nth-of-type(2) {
            order 1
        }
        &__menu
            display flex
            justify-content flex-end
            align-items center
            margin 0
            border none
            width auto
            padding 0
        &__menu--title
            display none
        &__menu--exit
            display none
        &__menu li
            display block
            border 0
            padding 0
            margin 0 0 0 15px
        &__menu li hover
            background $background-search
            border-bottom 0
        &__menu a
            display block
            padding 10px
        &__principal__toggle
            justify-content center 
            label
                display none
@media only screen and (min-width 1201px) 
    .Header
        width 1200px
        display: block;
        margin-left: auto;
        margin-right: auto;