@import './Variables.styl'
.Footer
    width 100%
    display grid
    grid-template-columns repeat(1, 1fr)
    grid-gap 5px
    div:nth-of-type(1) {
        order 2
    }
    div:nth-of-type(2) {
        order 1
    }
    &-social
        display flex
        align-items flex-end
        padding 10px 0 10px 0
        a
            align-content end
        img
            width 40px
            padding 0 20px 0 20px

@media only screen and (min-width 800px) 
    .Footer
        width 100%
        display grid
        grid-template-columns 70% 30%
        grid-gap 5px
        div:nth-of-type(1) {
            order 1
        }
        div:nth-of-type(2) {
            order 2
        }
@media only screen and (min-width 1201px) 
    .Footer
        width 1200px
        margin-left: auto;
        margin-right: auto;